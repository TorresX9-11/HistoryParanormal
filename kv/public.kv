<PublicScreen>:
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1  # Fondo casi negro
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'RELATOS PARANORMALES'
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 0.8, 0.1, 0.1, 1  # Rojo sangre
            size_hint_y: None
            height: "50dp"
        ScrollView:
            MDList:
                id: stories_list
        MDRaisedButton:
            text: 'VOLVER'
            pos_hint: {"center_x": 0.5}
            md_bg_color: 0.5, 0, 0, 1  # Rojo oscuro
            on_release: app.root.current = 'MenuScreen'