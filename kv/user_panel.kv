<UserPanelScreen>:
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1  # Fondo casi negro
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'TUS HISTORIAS PARANORMALES'
            halign: 'center'
            theme_text_color: "Custom"
            text_color: 0.8, 0.1, 0.1, 1  # Rojo sangre
        ScrollView:
            MDList:
                id: user_stories_list
        MDRaisedButton:
            text: 'MIS HISTORIAS'
            pos_hint: {"center_x": 0.5}
            md_bg_color: 0.5, 0, 0, 1  # Rojo oscuro
            on_release: app.root.get_screen('userpanel').show_my_stories()
        MDRaisedButton:
            text: 'CREAR NUEVA HISTORIA'
            pos_hint: {"center_x": 0.5}
            md_bg_color: 0.5, 0, 0, 1  # Rojo oscuro
            on_release: app.root.get_screen('userpanel').open_story_form()
        MDRaisedButton:
            text: 'VOLVER'
            pos_hint: {"center_x": 0.5}
            md_bg_color: 0.5, 0, 0, 1  # Rojo oscuro
            on_release: app.root.current = 'MenuScreen'