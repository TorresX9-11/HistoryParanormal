<MenuScreen>:
    # Fondo oscuro para la pantalla de menú
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1  # Fondo casi negro
        Rectangle:
            pos: self.pos
            size: self.size
    
    # Contenedor principal vertical
    BoxLayout:
        orientation: 'vertical'
        # Padding adaptativo según el dispositivo
        padding: dp(20) if is_mobile else dp(50)
        spacing: dp(20) if is_mobile else dp(30)
        
        # Spacer superior
        Widget:
            size_hint_y: 0.1
        
        # Logo de la aplicación
        Image:
            source: 'assets/LogoApp.png'
            size_hint: None, None
            # Tamaño adaptativo según el dispositivo
            size: dp(180) if is_mobile else dp(220), dp(180) if is_mobile else dp(220)
            pos_hint: {"center_x": 0.5}
            allow_stretch: True
            keep_ratio: True
            
        # Título principal
        MDLabel:
            text: 'SOMBRAS DE CHILE'
            halign: 'center'
            # Tamaño de fuente adaptativo
            font_style: "H4" if is_mobile else "H3"
            theme_text_color: "Custom"
            text_color: 0.8, 0.1, 0.1, 1  # Rojo sangre
            size_hint_y: None
            height: self.texture_size[1]
            
        # Subtítulo
        MDLabel:
            text: 'Relatos de terror y experiencias paranormales'
            halign: 'center'
            # Tamaño de fuente adaptativo
            font_style: "Subtitle1" if is_mobile else "H6"
            theme_text_color: "Custom"
            text_color: 0.7, 0.7, 0.7, 1  # Gris claro
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            
        # Espacio flexible
        Widget:
            size_hint_y: 0.2
            
        # Contenedor de botones
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(15)
            size_hint_y: None
            height: dp(200)
            
            # Botón principal - Explorar
            MDRaisedButton:
                text: 'EXPLORAR HISTORIAS'
                pos_hint: {"center_x": 0.5}
                size_hint_x: 0.8 if is_mobile else 0.6
                height: dp(50)
                md_bg_color: 0.8, 0.1, 0.1, 1  # Rojo principal
                elevation: 5
                on_release: app.screen_manager.current = 'main'
                
            # Botón secundario - Iniciar sesión
            MDRaisedButton:
                text: 'INICIAR SESIÓN'
                pos_hint: {"center_x": 0.5}
                size_hint_x: 0.8 if is_mobile else 0.6
                height: dp(45)
                md_bg_color: 0.5, 0, 0, 1  # Rojo oscuro
                on_release: app.screen_manager.current = 'login'
                
            # Botón terciario - Registrarse
            MDTextButton:
                text: '¿No tienes cuenta? Regístrate'
                pos_hint: {"center_x": 0.5}
                theme_text_color: "Custom"
                text_color: 0.7, 0.7, 0.7, 1
                on_release: app.screen_manager.current = 'register'
        
        # Spacer inferior
        Widget:
            size_hint_y: 0.1