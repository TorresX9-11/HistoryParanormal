<MenuScreen>:
    # Fondo oscuro para la pantalla de menú
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1  # Fondo casi negro
        Rectangle:
            pos: self.pos
            size: self.size
    
    # Contenedor principal vertical
    BoxLayout:
        orientation: 'vertical'
        # Padding adaptativo según el dispositivo
        padding: dp(20) if is_mobile else dp(50)
        spacing: dp(10) if is_mobile else dp(20)
        
        # Logo de la aplicación
        Image:
            source: 'assets/LogoApp.png'
            size_hint: None, None
            # Tamaño adaptativo según el dispositivo
            size: dp(150) if is_mobile else dp(200), dp(150) if is_mobile else dp(200)
            pos_hint: {"center_x": 0.5}
            allow_stretch: True
            keep_ratio: True
            
        # Título principal
        MDLabel:
            text: 'SOMBRAS DE CHILE'
            halign: 'center'
            # Tamaño de fuente adaptativo
            font_style: "H5" if is_mobile else "H4"
            theme_text_color: "Custom"
            text_color: 0.8, 0.1, 0.1, 1  # Rojo sangre
            size_hint_y: None
            height: self.texture_size[1]
            
        # Subtítulo
        MDLabel:
            text: 'Relatos de terror y experiencias paranormales'
            halign: 'center'
            # Tamaño de fuente adaptativo
            font_style: "Subtitle1" if is_mobile else "H6"
            theme_text_color: "Custom"
            text_color: 0.7, 0.7, 0.7, 1  # Gris claro
            size_hint_y: None
            height: self.texture_size[1]
            
        # Espacio flexible
        Widget:
            size_hint_y: 0.1
            
        # Botón para ver publicaciones
        MDRaisedButton:
            text: 'VER PUBLICACIONES'
            pos_hint: {"center_x": 0.5}
            # Ancho adaptativo según el dispositivo
            adaptive_size: True
            height: dp(50) if is_mobile else dp(40)
            md_bg_color: 0.5, 0, 0, 1  # Rojo oscuro
            on_release: app.root.current = 'public'
            
        # Botón para iniciar sesión
        MDRaisedButton:
            text: 'INICIAR SESIÓN'
            pos_hint: {"center_x": 0.5}
            # Ancho adaptativo según el dispositivo
            size_hint_x: 0.8 if is_mobile else 0.4
            height: dp(50) if is_mobile else dp(40)
            md_bg_color: 0.5, 0, 0, 1  # Rojo oscuro
            on_release: app.root.current = 'login'